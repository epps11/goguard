# Development Dockerfile
FROM golang:1.25-alpine

WORKDIR /app

# Install dependencies
RUN apk add --no-cache git ca-certificates

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Expose port
EXPOSE 8080

# Build and run directly (avoids architecture issues)
CMD ["go", "run", "./cmd/goguard", "-config", "config.yaml"]
